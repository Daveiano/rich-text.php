{
    "name": "contentful/structured-text-renderer",
    "description": "Renderer for the Contentful structured text",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.0",
        "ext-json": "*",
        "contentful/core": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5|^7.3",
        "twig/twig": "^2.5",
        "league/plates": "^3.3",
        "symfony/finder": "^3.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "Contentful\\StructuredText\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Contentful\\Tests\\StructuredText\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-quick-fail": "php vendor/bin/phpunit --stop-on-error --stop-on-failure -v",
        "lint-syntax": "$([ -f php-cs-fixer.phar ] && echo \"php php-cs-fixer.phar\" || echo \"php-cs-fixer\") fix --dry-run --stop-on-violation -v",
        "lint-static-analysis": "$([ -f phpstan.phar ] && echo \"php phpstan.phar\" || echo \"phpstan\") analyse --level=max src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.0-dev"
        }
    }
}
